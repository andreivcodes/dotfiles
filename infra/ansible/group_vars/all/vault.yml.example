---
# Example vault file - Copy to vault.yml and encrypt with ansible-vault
# ansible-vault create group_vars/all/vault.yml
# OR
# ansible-vault encrypt group_vars/all/vault.yml

# Root password for Proxmox nodes (used for PVE, PBS, and all services)
vault_root_password: "YourSecureRootPassword123!"

# Tailscale authentication key (get from https://login.tailscale.com/admin/settings/keys)
vault_tailscale_auth_key: "tskey-auth-XXXXXXXXXXXXX"

# Tailscale API token (optional, for advanced features)
vault_tailscale_api_token: "tskey-api-XXXXXXXXXXXXX"